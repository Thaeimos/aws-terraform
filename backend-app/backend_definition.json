{
  "containerDefinitions": [ 
     { 
        "essential": true,
        "image": "ECR_URL_PLACEHOLDER:latest", 
        "logConfiguration": { 
           "logDriver": "awslogs",
           "options": { 
              "awslogs-group" : "NAME_PLACEHOLDER",
              "awslogs-region": "REGION_PLACEHOLDER",
              "awslogs-stream-prefix": "ecs"
           }
        },
        "name": "NAME_PLACEHOLDER",
        "portMappings": [ 
           { 
              "containerPort": 3000,
              "hostPort": 3000,
              "protocol": "tcp"
           }
        ],
        "environment": [
          {
              "name": "Environment",
              "value": "DEPRECATED"
          },
          {
             "name": "AWS_XRAY_DAEMON_ADDRESS",
             "value": "xray-sidecar:2000"
          },
          {
             "name": "AWS_XRAY_DEBUG_MODE",
             "value": "TRUE"
          }
        ],
        "secrets": [
         {
            "name": "RDS_USERNAME",
            "valueFrom": "BACK_DB_SECRET_PLACEHOLDER:username::"
         },
         {
            "name": "RDS_PASSWORD",
            "valueFrom": "BACK_DB_SECRET_PLACEHOLDER:password::"
         },
         {
            "name": "RDS_HOSTNAME",
            "valueFrom": "BACK_DB_SECRET_PLACEHOLDER:hostname::"
         },
         {
            "name": "RDS_PORT",
            "valueFrom": "BACK_DB_SECRET_PLACEHOLDER:port::"
         },
         {
            "name": "RDS_DB_NAME",
            "valueFrom": "BACK_DB_SECRET_PLACEHOLDER:database::"
         }
      ],
      "links": [
         "xray-sidecar"
       ]
   },
   {
      "environment": [],
      "name": "xray-sidecar",
      "mountPoints": [],
      "image": "amazon/aws-xray-daemon",
      "cpu": 32,
      "memoryReservation": 256,
      "portMappings": [
         {
            "protocol": "udp",
            "containerPort": 2000,
            "hostPort": 0
         }
      ],
      "logConfiguration": {
         "logDriver": "awslogs",
         "options": {
            "awslogs-region": "REGION_PLACEHOLDER",
            "awslogs-stream-prefix": "ecs",
            "awslogs-group": "NAME_PLACEHOLDER"
         }
      },
         "essential": true,
         "volumesFrom": []
      }
   ],
  "cpu": "512",
  "family": "NAME_PLACEHOLDER",
  "memory": "1024",
  "networkMode": "awsvpc",
  "executionRoleArn": "ROLE_PLACEHOLDER",
  "requiresCompatibilities": [ 
      "FARGATE" 
   ]
}